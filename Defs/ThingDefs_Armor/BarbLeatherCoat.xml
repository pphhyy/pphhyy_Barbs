<Defs>

  <ThingDef ParentName="ArmorSmithableBaseBarb">
    <defName>pphhyy_Barbarian_BarbLeatherCoat</defName>
    <label>Leather Coat</label>
    <description>Leather Coat made from Leather and skulls looted on the battlefield, or while hunting.</description>
    <graphicData>
      <texPath>Armor/BarbLeatherCoat/BarbLeatherCoatI</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>10</Mass>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Heat>0.15</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/BarbLeatherCoat/BarbLeatherCoatI</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>pphhyy_Barbarian_BarbMarauderApparel</li>
      </tags>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
  </ThingDef>

