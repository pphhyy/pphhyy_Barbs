<Defs>

  <ThingDef ParentName="ArmorSmithableBaseBarb">
    <defName>pphhyy_Barbarian_Scale</defName>
    <label>Scale</label>
    <description>Scale made from armor and skulls looted on the battlefield.</description>
    <!-- <recipeMaker>
