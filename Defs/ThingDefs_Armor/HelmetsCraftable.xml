  <ThingDef ParentName="HatMakeableBase">
    <defName>pphhyy_Barbarian_BoneHelm</defName>
    <label>Bone Helm</label>
    <description>Bone Helm made from Bones.</description>
    <recipeMaker>
      <researchPrerequisite>pphhyy_Barbarians_Research</researchPrerequisite>
      <recipeUsers>
        <li>pphhyy_Barbarians_Building_ArmorBench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>1</Crafting>
      </skillRequirements>
      <factionPrerequisiteTags>
        <li>Tribal</li>
      </factionPrerequisiteTags>
    </recipeMaker>
    <graphicData>
      <texPath>Armor/BoneHelm/BoneHelm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <techLevel>Neolithic</techLevel>
    <costList>
        <DankPyon_Bone>60</DankPyon_Bone>
        <Steel>40</Steel>
    </costList>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>15</Mass>
      <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.05</SocialImpact>
      <SuppressionPower>0.5</SuppressionPower>
    </equippedStatOffsets>
    <apparel>
      <tags>
        <li>pphhyy_Barbarian_BarbMarauderApparel</li>
      </tags>
      <useWornGraphicMask>true</useWornGraphicMask>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/BoneHelm/BoneHelm</wornGraphicPath>
      <ideoDesireAllowedFactionCategoryTags><li>Tribal</li></ideoDesireAllowedFactionCategoryTags>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

