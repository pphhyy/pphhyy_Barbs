  <RecipeDef>
    <defName>pphhyy_Barbarian_MakeBoneHelmII</defName>
    <label>make Bone Helm</label>
    <description>Make a Bone Helm set made from armor and skulls looted on the battlefield.</description>
    <jobString>Making Bone Helm</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>pphhyy_Barbarian_BoneHelm</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Skull</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>DankPyon_Bone</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DankPyon_Bone</li>
        <li>pphhyy_Barbarian_BoneHelm</li>
        <li>Skull</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <pphhyy_Barbarian_BoneHelmII>1</pphhyy_Barbarian_BoneHelmII>
    </products>
  </RecipeDef>

