  <RecipeDef>
    <defName>pphhyy_Barbarian_MakeMetalHelm</defName>
    <label>make Metal Helm</label>
    <description>Make a Metal Helm made from armor and skulls looted on the battlefield.</description>
    <jobString>Making Rusted Armor</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>DankPyon_Headgear_GreatHelm</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm1c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm2c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm3c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm4c</li>
            <li>Apparel_ArmorHelmetCataphract</li>
            <li>Apparel_ArmorHelmetRecon</li>
            <li>Apparel_PowerArmorHelmet</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Skull</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DankPyon_Headgear_GreatHelm</li>
        <li>DankPyon_Headgear_HeraldicGreatHelm1c</li>
        <li>DankPyon_Headgear_HeraldicGreatHelm2c</li>
        <li>DankPyon_Headgear_HeraldicGreatHelm3c</li>
        <li>DankPyon_Headgear_HeraldicGreatHelm4c</li>
        <li>Apparel_ArmorHelmetCataphract</li>
        <li>Apparel_ArmorHelmetRecon</li>
        <li>Apparel_PowerArmorHelmet</li>
        <li>Skull</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <pphhyy_Barbarians_MetalHelm>1</pphhyy_Barbarians_MetalHelm>
    </products>
	<!-- <researchPrerequisite>Brachyura_Breeding_I</researchPrerequisite> -->
