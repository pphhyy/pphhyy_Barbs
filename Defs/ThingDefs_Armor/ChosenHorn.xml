<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="HatMakeableBaseBarbs">
    <defName>pphhyy_Barbarians_ChosenHorn</defName>
    <label>Chosen Horn Helm</label>
    <description>Chosen Horn helm made from armor and skulls looted on the battlefield.</description>
    <graphicData>
      <texPath>Armor/ChosenHorn/ChosenHorn</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.80</drawSize>
    </graphicData>
    <uiIconScale>1.15</uiIconScale>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>1.5</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Heat>0.54</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.05</SocialImpact>
      <SuppressionPower>0.5</SuppressionPower>
    </equippedStatOffsets>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Armor/ChosenHorn/ChosenHorn</wornGraphicPath>
      <ideoDesireAllowedFactionCategoryTags><li>Tribal</li></ideoDesireAllowedFactionCategoryTags>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
      </defaultOutfitTags>
      <tags>
        <li>pphhyy_Barbarian_BarbChosenApparel</li>
      </tags>
    </apparel>
  </ThingDef>

  <RecipeDef>
    <defName>pphhyy_Barbarian_MakeChosenHorn</defName>
    <label>make Chosen Horn Helm</label>
    <description>Make a Chosen Horn helm made from armor and skulls looted on the battlefield.</description>
    <jobString>Making Rusted Armor</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>DankPyon_Headgear_ClosedBascinetHelmet</li>
            <li>DankPyon_Headgear_SalletHelmet</li>
            <li>DankPyon_Headgear_Bascinet_KlappvisierHelmetClosed</li>
            <li>DankPyon_Headgear_GreatHelm</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm1c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm2c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm3c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm4c</li>
            <li>Apparel_ArmorHelmetCataphract</li>
            <li>Apparel_ArmorHelmetRecon</li>
            <li>Apparel_PowerArmorHelmet</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>Skull</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
            <li>DankPyon_Headgear_ClosedBascinetHelmet</li>
            <li>DankPyon_Headgear_SalletHelmet</li>
            <li>DankPyon_Headgear_Bascinet_KlappvisierHelmetClosed</li>
            <li>DankPyon_Headgear_GreatHelm</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm1c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm2c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm3c</li>
            <li>DankPyon_Headgear_HeraldicGreatHelm4c</li>
            <li>Apparel_ArmorHelmetCataphract</li>
            <li>Apparel_ArmorHelmetRecon</li>
            <li>Apparel_PowerArmorHelmet</li>
            <li>Skull</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <pphhyy_Barbarians_ChosenHorn>1</pphhyy_Barbarians_ChosenHorn>
    </products>
	<!-- <researchPrerequisite>Brachyura_Breeding_I</researchPrerequisite> -->
  </RecipeDef>

