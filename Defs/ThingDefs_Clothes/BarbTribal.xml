<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Barbarian Tribal outfit -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>pphhyy_Barbarian_BarbTribal</defName>
    <label>Barbarian Tribal outfit</label>
    <description>Barbarian Tribal garb made from animal furs.</description>
    <graphicData>
      <texPath>Apparel/BarbTribal/BarbTribal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1800</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/BarbTribal/BarbTribal</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>pphhyy_Barbarian_BarbThrallApparel</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <recipeMaker>
      <recipeUsers>
        <li>pphhyy_Barbarians_Building_ArmorBench</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

